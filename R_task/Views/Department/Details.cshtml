@model ViewModel.DepartmentVm

@{
    ViewData["Title"] = "Department Details";
}

<h2>Department Details</h2>

<div>
    <h4>@Model.Name</h4>
    <img src="@Model.Logo" alt="Logo" width="100" height="100" />
</div>

<div>
    <h4>Sub-Departments</h4>
    <ul>
        @foreach (var subDept in Model.SubDepartments)
        {
            <li>@subDept.Name</li>
        }
    </ul>
</div>

<div>
    <h4>Parent Departments</h4>
    @if (Model.ParentDepartmentId.HasValue)
    {
        <ul>
            <li>@Model.ParentDepartmentName</li>
        </ul>
    }
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
