<!-- Views/Department/ParentDepartments.cshtml -->
@model IEnumerable<ViewModel.DepartmentVm>

@{
    ViewData["Title"] = "Parent Departments";
}

<h2>Parent Departments</h2>

<ul>
    @foreach (var department in Model)
    {
        <li>@department.Name</li>
    }
</ul>

<a href="@Url.Action("Details", "Department")">Back to Details</a>
