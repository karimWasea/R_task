@model List<ViewModel.DepartmentVm>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Logo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(department.Logo))
                    {
                        <img src="@department.Logo" alt="@department.Name" width="50" height="50" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Details", "Department", new { id = department.DepartmentID })">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
